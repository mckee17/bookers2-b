      <h2>投稿日検索</h2>
      <%= form_with url:user_path(user), method: :get do |f| %>
      <div class="form-group">
      <%= f.date_field :date %>
      </div>
      <%= f.submit "検索", class:"btn btn-success" %>
      <% end %>
      <% if params[:date].present? %>
      <h4 class="mt-3">検索結果</h4>
      投稿数： <%= books.where('created_at LIKE ?',"#{params[:date]}%").count %>
      <% end %>
